# ========================================
# CONFIGURAÇÕES DO SISTEMA FLIG
# ========================================
# Copie este arquivo para .env e configure as variáveis

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# JWT Secret - DEVE ser uma string longa e aleatória em produção
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Chave de criptografia para dados sensíveis
ENCRYPTION_KEY=your-encryption-key-here-32-chars

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=flig_db
DB_USER=root
DB_PASSWORD=your-database-password
DB_CHARSET=utf8mb4

# Pool de conexões
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# ========================================
# CONFIGURAÇÕES DO REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_RETRIES=3

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@flig.com.br

# ========================================
# CONFIGURAÇÕES DE APIS EXTERNAS
# ========================================
# Token da API CNPJA (opcional)
CNPJA_TOKEN=your-cnpja-token-here

# Configurações de pagamento (quando implementar)
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_GATEWAY_TOKEN=your-payment-token
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Sentry DSN (opcional)
SENTRY_DSN=your-sentry-dsn-here

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ========================================
# CONFIGURAÇÕES DE FILAS
# ========================================
QUEUE_MAX_SIZE=1000
QUEUE_AUTO_CLOSE_HOURS=24
QUEUE_ESTIMATED_TIME_PER_POSITION=5
QUEUE_MAX_ADVANCES=8
QUEUE_BASE_PRICE=2.00

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Apenas para desenvolvimento - remover em produção
DEBUG_MODE=true
MOCK_PAYMENTS=true
SKIP_EMAIL_VERIFICATION=true



