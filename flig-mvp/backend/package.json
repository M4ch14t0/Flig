{
  "name": "flig-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema Flig - Filas Virtuais Inteligentes",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build completed'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:migrate": "mysql -u root -p flig_db < database/schema_corrigido.sql",
    "db:seed": "mysql -u root -p flig_db < database/seed.sql",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "setup:production": "node scripts/setup-production.js",
    "start:production": "NODE_ENV=production node server.js"
  },
  "keywords": [
    "filas",
    "queue",
    "sistema",
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "api"
  ],
  "author": "Flig Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.0",
    "nodemailer": "^6.9.7",
    "redis": "^4.7.1",
    "router": "^2.2.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/flig.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/flig/issues"
  },
  "homepage": "https://github.com/seu-usuario/flig#readme"
}
