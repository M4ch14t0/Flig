# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO - SISTEMA FLIG
# ========================================
# 
# IMPORTANTE: Este arquivo contém configurações para PRODUÇÃO
# NUNCA commite este arquivo com valores reais!
# Use apenas como referência e configure no servidor de produção
#
# @author Flig Team
# @version 1.0.0

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
NODE_ENV=production
PORT=5000

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# JWT Secret - DEVE ser uma string longa e aleatória (mínimo 256 bits)
JWT_SECRET=super-secret-jwt-key-with-256-bits-minimum-length-for-production-security

# Chave de criptografia - DEVE ser uma string de 32 caracteres
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_USER=flig_user
DB_PASSWORD=secure-database-password-123
DB_NAME=flig_db
DB_PORT=3306

# ========================================
# CONFIGURAÇÕES DO REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure-redis-password-456

# ========================================
# CONFIGURAÇÕES DE APIS EXTERNAS
# ========================================
# Token da API CNPJá para validação real de CNPJ
CNPJA_TOKEN=your-real-cnpja-api-token-here

# ========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@flig.com.br

# ========================================
# CONFIGURAÇÕES DE PAGAMENTO
# ========================================
# PagSeguro
PAGSEGURO_EMAIL=your-pagseguro-email
PAGSEGURO_TOKEN=your-pagseguro-token
PAGSEGURO_SANDBOX=false

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
# Firebase (para push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# SendGrid (para emails)
SENDGRID_API_KEY=your-sendgrid-api-key

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Desabilitar simulações em produção
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false
MOCK_NOTIFICATIONS=false

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGIN=https://flig.com.br,https://www.flig.com.br,https://app.flig.com.br

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=/var/log/flig/app.log

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/flig

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Sentry (para monitoramento de erros)
SENTRY_DSN=your-sentry-dsn

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA ADICIONAL
# ========================================
# Helmet.js configurações
HELMET_ENABLED=true
HELMET_CSP_ENABLED=true

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
# Compressão
COMPRESSION_ENABLED=true

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# ========================================
# CONFIGURAÇÕES DE SSL/TLS
# ========================================
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ========================================
# CONFIGURAÇÕES DE DOMÍNIO
# ========================================
DOMAIN=flig.com.br
API_URL=https://api.flig.com.br
FRONTEND_URL=https://app.flig.com.br
