# ========================================
# CONFIGURAÇÕES DO FRONTEND FLIG
# ========================================
# Copie este arquivo para .env e configure as variáveis

# ========================================
# CONFIGURAÇÕES DA API
# ========================================
# URL base do backend
VITE_API_URL=http://localhost:5000/api

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Modo de desenvolvimento (true/false)
VITE_DEV_MODE=true

# Usar autenticação mock (true/false)
VITE_USE_MOCK_AUTH=false

# ========================================
# CONFIGURAÇÕES DE RECURSOS
# ========================================
# Habilitar recursos experimentais
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# ========================================
# CONFIGURAÇÕES DE ANALYTICS
# ========================================
# Google Analytics ID (opcional)
VITE_GA_ID=

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
# Firebase config (opcional)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ========================================
# CONFIGURAÇÕES DE PAGAMENTO
# ========================================
# Chave pública do gateway de pagamento
VITE_PAYMENT_PUBLIC_KEY=

# ========================================
# CONFIGURAÇÕES DE MAPAS
# ========================================
# Google Maps API Key (opcional)
VITE_GOOGLE_MAPS_API_KEY=

# ========================================
# CONFIGURAÇÕES DE REDE SOCIAL
# ========================================
# Facebook App ID (opcional)
VITE_FACEBOOK_APP_ID=

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
# Timeout para requisições (ms)
VITE_API_TIMEOUT=10000

# Tamanho máximo de upload (bytes)
VITE_MAX_UPLOAD_SIZE=5242880

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
# TTL do cache local (ms)
VITE_CACHE_TTL=300000

# ========================================
# CONFIGURAÇÕES DE DEBUG
# ========================================
# Nível de log (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Habilitar logs detalhados
VITE_DEBUG_LOGS=false



